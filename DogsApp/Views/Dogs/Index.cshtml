@using DogsApp.Models
@model IEnumerable<Dog>
<!DOCTYPE html>
    <html>
    <head>
        <title>Dogs</title>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="container m-1">
            <div class="row">
        <ul class="list-group">
            @foreach (var dog in Model)
            {
                    <li class="list-group-item d-flex justify-content-between">
                        <span>@dog.Name </span>  
                        <form name="deleteform" action="/delete" method="post"> 
                            <input type="hidden" name="Id" value="@dog.Id" />
                            <input class="btn btn-outline-danger  "  type="submit" value="X"/>
                            </form>
                        

                    </li>
            }
        </ul>
    </div>
    </div>
        <a href="/create">Add</a>


    </body>
    </html>
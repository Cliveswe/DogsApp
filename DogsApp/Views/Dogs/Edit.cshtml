@model DogsApp.Models.Dog

<!DOCTYPE html>
<html>
<head>
    <title>Edit Dog data</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
    <title>Create a dog</title>
</head>
<body>
    <div class="container container-fluid m-3">
        <div class="border border-dark">
            <div class="row">

                <div class="col-3"></div>
                <div class="col-6">
                    <div class=" mb-3">
                        <strong>Add a dog.</strong>
                        <form method="post" action="/edit">

                            <input type="hidden" name="Id" value="@Model.Id"  />
                            <input type="text" name="Name" value="@Model.Name" placeholder="Dog Name" required />
                            <input type="number" name="Age" value="@Model.Age" placeholder="Dog Age" required />
                            <input type="submit" value="Update Dog" />
                            <input type="button" onclick="history.go(-1)" value="Back" />
                        </form>

                    </div>


                    <div class="col-3"></div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>